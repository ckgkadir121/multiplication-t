import streamlit as st
import time
st.title("CHAI MAKER")


add_masala = st.checkbox("ADD MASALA")
if add_masala:
  st.write("MASALA ADDED")


tea_type = st.radio("PICK CHAI BASE",["MILK","ALMOND MILK","WATER"])
if tea_type:
  st.write(f"YOU HAVE CHOSEN MILK BASE AS {tea_type}")



flavour = st.selectbox("CHOOSE FLAVOUR",["ADRAK","KESAR","TULSI"])
if flavour:
   st.write(f"YOUR FLAVOUR IS {flavour}")

sugar = st.slider("SPOONS OF SUGAR",0,10,2)
if sugar:
  st.write(f"YOU HAVE SELECTED SPOONS OF SUGAR= {sugar}")


cups = st.number_input("HOW MANY CUPS DO YOU WANT",min_value=1,max_value=10)
if cups:
  st.write(f"YOU HAVE SELECTED CUPS ={cups}")





make_chai = st.button("MAKE CHAI")
if make_chai:
  st.success("YOUR CHAI IS BEING BREWED")
  time.sleep(6)
  st.success("YOUR CHAI IS READY")
